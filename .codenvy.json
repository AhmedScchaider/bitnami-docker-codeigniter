{
  "v": "4.0",
  "workspace": {
    "name": "codeigniter",
    "defaultEnv": "codeigniter",
    "environments": [
      {
        "name": "codeigniter",
        "recipe": null,
        "machineConfigs": [
          {
            "name": "ws-machine",
            "limits": {
              "ram": 1024
            },
            "source": {
              "type": "image",
              "location": "bitnami/codeigniter:che"
            },
            "type": "docker",
            "dev": true
          }
        ]
      }
    ],
    "projects": [
      {
        "name": "codeigniter_sample",
        "type": "blank",
        "path": "/codeigniter_sample",
        "source": {
          "type": "git",
          "location": "https://github.com/bitnami/bitnami-docker-che-blank-sample",
          "parameters": {
            "branch": "master",
            "keepVcs": "false"
          }
        },
        "mixins": [
          "git",
          "pullrequest"
        ],
        "attributes": {
          "local_branch": [ "contrib" ],
          "contribute_to_branch" : [ "master" ]
        },
        "modules": [],
        "problems": []
      }
    ],
    "commands": [
      {
        "name": "run",
        "type": "custom",
        "commandLine": "source /opt/bitnami/stacksmith-utils.sh && print_welcome_page && php -S 0.0.0.0:8000 -t ${current.project.path}",
        "attributes": {
           "previewUrl": "http://${server.port.8000}/"
        }
      },
      {
        "name": "create project - run first",
        "type": "custom",
        "commandLine": "source /opt/bitnami/stacksmith-utils.sh && print_welcome_page && harpoon execute codeigniter createProject --force codeigniter_sample && php -S 0.0.0.0:8000 -t ${current.project.path}",
        "attributes": {
           "previewUrl": "http://${server.port.8000}/"
        }
      }
    ]
  },
  "ide": {
    "onProjectsLoaded": {
      "actions": [
        {
          "properties": {
            "name": "create project - run first"
          },
          "id": "runCommand"
        }
      ]
    }
  }
}
